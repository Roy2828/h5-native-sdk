<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/bg_cc000000_6"
    android:minWidth="@dimen/qb_px_100"
    android:minHeight="@dimen/qb_px_40"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="@dimen/qb_px_30"
        android:layout_height="@dimen/qb_px_30"
        android:layout_marginTop="@dimen/qb_px_20"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@mipmap/toast_yes"
/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/qb_px_16"
        android:paddingTop="@dimen/qb_px_12"
        android:paddingEnd="@dimen/qb_px_16"
        android:paddingBottom="@dimen/qb_px_12"
        tools:text="提交成功提交成功功"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible" />
</LinearLayout>
